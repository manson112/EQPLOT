doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    script(src="/javascripts/moment.min.js")
    script(src="/javascripts/Chart.min.js")
    script(src="https://code.jquery.com/jquery-1.10.2.min.js")
    script(src="/javascripts/socket.io.js")
    script.
      $(document).ready(function(){
        var labelList = [];
        var dataList = [];
        var ctx = document.getElementById("Chart").getContext("2d");
        var myChart;
        function setChart() {
          myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: labelList,
              datasets: [{
                  label: '',
                  data: dataList,
                  backgroundColor: [
                      'rgba(255, 99, 132, 0.2)',
                      'rgba(54, 162, 235, 0.2)',
                      'rgba(255, 206, 86, 0.2)',
                      'rgba(75, 192, 192, 0.2)',
                      'rgba(153, 102, 255, 0.2)',
                      'rgba(255, 159, 64, 0.2)'
                  ],
                  borderColor: [
                      'rgba(255,99,132,1)',
                      'rgba(54, 162, 235, 1)',
                      'rgba(255, 206, 86, 1)',
                      'rgba(75, 192, 192, 1)',
                      'rgba(153, 102, 255, 1)',
                      'rgba(255, 159, 64, 1)'
                  ],
                  borderWidth: 1
              }]
            },
            options: {
              scales: {
                xAxes: [
                ],
                yAxes: [{
                  ticks: {
                    beginAtZero:true
                  }   
                }]
              },
              legend: {
                display: false
              },
              showAllTooltips: true
            }
          });
        }
        setChart();
        var socket = io('http://localhost:3000');

        socket.on('connect', function() {
          socket.emit("ddd", {data:"fdz"});
        });
        socket.on('eqsize', function(data){
          $("#eqsize").text(data.eqsize);
          labelList.push(data.time);
          dataList.push(data.eqsize);
          if(data.eqsize < 3) {
            $(".text").css("background-color", "green");
            $("#eqtext").text("양호");
          } else if(data.eqsize < 8) {
            $(".text").css("background-color", "yellow");
            $("#eqtext").text("주의");
          } else {
            $(".text").css("background-color", "red");
            $("#eqtext").text("위험");
          }
          myChart.update();
        });
      })
    block content
